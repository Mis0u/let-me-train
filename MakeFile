.PHONY		: help

.DEFAULT_GOAL	= help


EXEC_SF		= symfony
COMPOSER	= composer

SYMFONY		= $(EXEC_SF) console

## â€”â€” Composer ğŸ¶ â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”

